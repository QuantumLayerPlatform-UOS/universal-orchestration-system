# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agent-manager
MONGODB_DB_NAME=agent-manager

# Redis Configuration (for Bull queue)
REDIS_URL=redis://localhost:6379

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOGS_DIR=./logs

# Security
JWT_SECRET=your-jwt-secret
API_KEY=your-api-key

# Agent Configuration
AGENT_HEARTBEAT_TIMEOUT=30000
AGENT_HEARTBEAT_CHECK_INTERVAL=10000

# Task Queue Configuration
TASK_ASSIGNMENT_TIMEOUT=300000
TASK_DEFAULT_TIMEOUT=300000
TASK_MAX_RETRIES=3

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090